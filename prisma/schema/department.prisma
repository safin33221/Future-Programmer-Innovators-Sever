model Department {
    id   String @id @default(uuid())
    name String @unique

    members            Member[]
    memberApplications MemberApplication[]
    createdAt          DateTime            @default(now())
    updatedAt          DateTime            @default(now()) @updatedAt
}

model Session {
    id   String @id @default(uuid())
    name String @unique

    members            Member[]
    memberApplications MemberApplication[]
}
