model Department {
    id                 String              @id @default(uuid())
    name               String              @unique
    isDeleted          Boolean             @default(false)
    members            Member[]
    memberApplications MemberApplication[]
    createdAt          DateTime            @default(now())
    updatedAt          DateTime            @default(now()) @updatedAt
}

model Session {
    id   String @id @default(uuid())
    name String @unique

    isDeleted Boolean   @default(false)
    deletedAt DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    members            Member[]
    memberApplications MemberApplication[]
}
